<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">#4caf50</item>


    </style>


    <style name="PopupMenu">
        <item name="android:itemBackground">#fff</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">#00843d</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:colorBackground">#fff</item>
        <item name="android:itemPadding">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>

    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:color">@color/colorAccent</item>

    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">#00843d</item>
    </style>



</resources>
