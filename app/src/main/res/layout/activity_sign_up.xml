<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:ndroid="http://schemas.android.com/apk/res-auto"
        android:fitsSystemWindows="true"
        android:background="#fff"


>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="56dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
    >

        <ImageView android:src="@drawable/agora"
                   android:layout_width="wrap_content"
                   android:layout_height="72dp"
                   android:layout_marginBottom="24dp"
                   android:layout_gravity="center_horizontal" />

        <!--  Name Label -->

            <EditText android:id="@+id/input_userName"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:drawablePadding="10dp"
                      android:background="@drawable/text_input_border"
                        android:drawableLeft="@drawable/ic_account_circle_black_24dp"

                      android:layout_marginEnd="10dp"
                      android:layout_marginStart="10dp"

                      android:padding="20dp"
                      android:textSize="14sp"
                      android:inputType="textCapWords"
                      android:hint="User Name" />


            <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent" android:layout_height="wrap_content">
            <EditText android:id="@+id/input_firstName"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:drawablePadding="10dp"
                      android:drawableLeft="@drawable/ic_assignment_ind_black_24dp"



                      android:layout_marginStart="10dp"
                      android:background="@drawable/text_input_border"

                      android:padding="20dp"
                      android:textSize="14sp"
                      android:inputType="textCapWords"

                      android:hint="First Name" android:layout_marginLeft="10dp"/>
            <EditText android:id="@+id/input_lastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                      android:layout_marginLeft="5dp"
                      android:layout_marginRight="10dp"
                      android:layout_alignParentRight="true"
            android:drawablePadding="10dp"
                      android:layout_toRightOf="@+id/input_firstName"

                      android:drawableLeft="@drawable/ic_assignment_ind_black_24dp"
                      android:background="@drawable/text_input_border"


            android:padding="20dp"
            android:textSize="14sp"
            android:inputType="textCapWords"

            android:hint="Last Name" />
            </RelativeLayout>



        <!-- Email Label -->

            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/text_input_border"


                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:drawableLeft="@drawable/ic_email_black_24dp"

                    android:padding="20dp"
                    android:textSize="14sp"
                    android:id="@+id/input_email"
                    android:hint="Email"
                    android:inputType="text"/>


        <!-- Password Label -->

            <EditText android:id="@+id/input_password"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:drawablePadding="10dp"
                      android:layout_marginTop="10dp"


                      android:layout_marginEnd="10dp"
                      android:layout_marginStart="10dp"
                      android:background="@drawable/text_input_border"

                      android:padding="20dp"
                      android:textSize="14sp"
                      android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                      android:inputType="textPassword"

                      android:hint="Password"
            />


        <!-- Signup Button -->
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
            <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_signup"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:textColor="#fff"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="20dp"

                    android:text="Sign Up"/>
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_marginTop="20dp" android:layout_height="wrap_content" android:layout_centerHorizontal="true"></RelativeLayout>
            <ProgressBar
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="30dp"

                    android:layout_centerHorizontal="true"
                    android:visibility="gone"
                    android:layout_centerInParent="true"



                    android:id="@+id/progress_bar"

                    android:indeterminateDrawable="@drawable/loader_anim" />
        </RelativeLayout>
        <RelativeLayout android:layout_width="wrap_content"
                        android:layout_gravity="center" android:layout_height="wrap_content">

        <TextView android:id="@+id/link_login"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"

                  android:text="Already a member? "


                  android:textSize="16dip"/>
            <TextView android:id="@+id/redirect_link_login"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"

                      android:layout_marginTop="10dp"
                      android:textColor="#4caf50"

                      android:text="Sign In "
                      android:layout_toRightOf="@+id/link_login"


                      android:textSize="16dip"/>


        </RelativeLayout>

    </LinearLayout>
</ScrollView>