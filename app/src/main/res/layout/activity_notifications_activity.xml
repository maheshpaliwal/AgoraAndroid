<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="#fff"
        android:theme="@style/Theme.Design.NoActionBar"
        android:layout_height="match_parent"
        tools:context=".Notifications_activity">
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:background="#fff"
            android:id="@+id/back_button"
    android:padding="0dp"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginLeft="10dp"
    android:drawableLeft="@drawable/ic_arrow_back_black_24dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:textColor="#00843d"
              android:textStyle="bold"
              android:text="NOTIFICATIONS"

    android:layout_centerHorizontal="true"/>

    <RelativeLayout android:layout_width="match_parent"
                    android:background="#00843d"
                    android:layout_marginTop="50dp" android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="5dp"
                android:layout_width="40dp" android:layout_height="40dp"
                android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
                android:id="@+id/icon"
                   android:src="@drawable/elect"
        />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/icon"
        android:layout_marginLeft="20dp"
                  android:textSize="14dp"
                  android:textColor="#fff"
                  android:layout_centerVertical="true"
        android:text="You have successfully created an election"/>

    </RelativeLayout>





</RelativeLayout>