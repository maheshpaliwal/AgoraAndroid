<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".SignUpEmailActivity">
    <ImageView android:layout_width="100dp" android:layout_height="100dp"
               android:id="@+id/logo" android:layout_centerHorizontal="true" android:layout_marginTop="100dp" android:src="@drawable/agora"
    />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_below="@+id/logo"
              android:layout_marginTop="40dp"
              android:textSize="16sp"

              android:layout_centerHorizontal="true"
              android:text="A password reset link"
              android:textColor="#fff"
              android:id="@+id/emailText"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:layout_below="@+id/emailText"
                 android:layout_marginTop="10dp"
                 android:textSize="16sp"

                 android:layout_centerHorizontal="true"
                 android:text="has been sent to your email"
                 android:textColor="#fff"
                 android:id="@+id/emailText2"

/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_below="@+id/emailText2"
              android:layout_marginTop="10dp"
              android:textSize="16sp"

              android:layout_centerHorizontal="true"
              android:text="Follow it to reset your password"
              android:textColor="#fff"
              android:id="@+id/emailText3"

    />


    <ImageView android:layout_width="50dp" android:layout_height="50dp"
               android:layout_marginTop="20dp"
               android:layout_centerInParent="true"
               android:layout_below="@+id/emailText3"
               android:id="@+id/imageMail"
               android:src="@drawable/email2"
    />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_below="@+id/imageMail"
              android:layout_marginTop="30dp"
              android:textSize="24sp"
              android:textStyle="bold"
              android:layout_centerHorizontal="true"
              android:text="OR"
              android:textColor="#fff"
              android:id="@+id/OR"

    />

    <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/OR"
            android:background="@drawable/button_back_sign_in"
            android:textColor="#fff"

            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"

            android:text="Sign In"/>

</RelativeLayout>