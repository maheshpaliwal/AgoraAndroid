<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_marginBottom="50dp"

            tools:context=".Cast_vote">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_marginTop="20dp"
                  android:paddingBottom="40dp"
                  android:layout_marginBottom="20dp"



                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
                  android:orientation="vertical">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAlignment="center"
              android:layout_marginTop="20dp"
              android:textColor="#002e63"
              android:layout_gravity="center_horizontal"

              android:text="CANDIDATES"/>
    <RelativeLayout android:layout_width="match_parent"
                    android:background="#fff"
                    android:padding="2dp"



                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/realative1" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/number1"
                  android:text="1"
                  android:paddingLeft="10dp"
                  android:paddingRight="10dp"
                  android:textSize="30dp"
                  android:textStyle="bold"
                  android:textColor="#fff"
                  android:background="#00843d"
        />


        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Candidate 1"
                  android:textSize="14dp"
                  android:layout_toRightOf="@+id/number1"
                  android:layout_centerVertical="true"



                  android:id="@+id/candidate1"
                  android:textColor="#333333"


                  android:layout_marginLeft="10dp"

        />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:layout_marginRight="20dp"
                  android:layout_centerVertical="true"
        android:drawableLeft="@drawable/ic_add_black_24dp"/>

    </RelativeLayout>

    <RelativeLayout android:layout_width="match_parent"
                    android:background="#fff"
                    android:padding="2dp"



                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/realative2" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/number2"
                  android:text="2"
                  android:paddingLeft="10dp"
                  android:paddingRight="10dp"
                  android:textSize="30dp"
                  android:textStyle="bold"
                  android:textColor="#fff"
                  android:background="#00843d"
        />


        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Candidate 2"
                  android:textSize="14dp"
                  android:layout_toRightOf="@+id/number2"
                  android:layout_centerVertical="true"



                  android:id="@+id/candidate2"
                  android:textColor="#333333"


                  android:layout_marginLeft="10dp"

        />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:layout_marginRight="20dp"
                  android:layout_centerVertical="true"
                  android:drawableLeft="@drawable/ic_add_black_24dp"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent"
                    android:background="#fff"
                    android:padding="2dp"



                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/realative3" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/number3"
                  android:text="3"
                  android:paddingLeft="10dp"
                  android:paddingRight="10dp"
                  android:textSize="30dp"
                  android:textStyle="bold"
                  android:textColor="#fff"
                  android:background="#00843d"
        />


        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Candidate 3"
                  android:textSize="14dp"
                  android:layout_toRightOf="@+id/number3"
                  android:layout_centerVertical="true"




                  android:id="@+id/candidate3"
                  android:textColor="#333333"


                  android:layout_marginLeft="10dp"

        />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:layout_marginRight="20dp"
                  android:layout_centerVertical="true"
                  android:drawableLeft="@drawable/ic_add_black_24dp"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent"
                    android:background="#fff"
                    android:padding="2dp"



                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/realative4" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/number4"
                  android:text="4"
                  android:paddingLeft="10dp"
                  android:paddingRight="10dp"
                  android:textSize="30dp"
                  android:textStyle="bold"
                  android:textColor="#fff"
                  android:background="#00843d"
        />


        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Candidate 4"
                  android:textSize="14dp"
                  android:layout_centerVertical="true"
                  android:layout_toRightOf="@+id/number4"



                  android:id="@+id/candidate4"
                  android:textColor="#333333"


                  android:layout_marginLeft="10dp"

        />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:layout_marginRight="20dp"
                  android:layout_centerVertical="true"
                  android:drawableLeft="@drawable/ic_add_black_24dp"/>

    </RelativeLayout>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAlignment="center"
                  android:layout_marginTop="20dp"
                  android:textColor="#002e63"
                  android:layout_gravity="center_horizontal"

                  android:text="YOUR BALLOTS"/>
        <RelativeLayout android:layout_width="match_parent"
                        android:background="#fff"
                        android:padding="2dp"



                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:id="@+id/realative5" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/number5"
                      android:text="3"
                      android:paddingLeft="10dp"
                      android:paddingRight="10dp"
                      android:textSize="30dp"
                      android:textStyle="bold"
                      android:textColor="#fff"
                      android:background="#00843d"
            />


            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Candidate 3"
                      android:textSize="14dp"
                      android:layout_centerVertical="true"
                      android:layout_toRightOf="@+id/number5"



                      android:id="@+id/candidate5"
                      android:textColor="#333333"


                      android:layout_marginLeft="10dp"

            />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_alignParentRight="true"
                      android:layout_marginRight="20dp"
                      android:layout_centerVertical="true"
                      android:drawableLeft="@drawable/ic_delete_black_24dp"/>

        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent"
                        android:background="#fff"
                        android:padding="2dp"



                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:id="@+id/realative6" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/number6"
                      android:text="4"
                      android:paddingLeft="10dp"
                      android:paddingRight="10dp"
                      android:textSize="30dp"
                      android:textStyle="bold"
                      android:textColor="#fff"
                      android:background="#00843d"
            />


            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Candidate 4"
                      android:textSize="14dp"
                      android:layout_centerVertical="true"
                      android:layout_toRightOf="@+id/number6"



                      android:id="@+id/candidate6"
                      android:textColor="#333333"


                      android:layout_marginLeft="10dp"

            />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_alignParentRight="true"
                      android:layout_marginRight="20dp"
                      android:layout_centerVertical="true"
                      android:drawableLeft="@drawable/ic_delete_black_24dp"/>

        </RelativeLayout>
        <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_vote"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:textColor="#fff"

                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="30dp"

                android:text="Vote"/>
    </LinearLayout>

</ScrollView>